<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Navbar -->
    <include
        android:id="@+id/headerNavbar"
        layout="@layout/header_navbar" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Page Heading -->
            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ Market - Crop Prices"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Subtitle Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select State, District, and Commodity to view current mandi prices for crops ðŸŒ¾"
                android:textSize="16sp"
                android:textColor="#616161"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- State Dropdown -->
            <AutoCompleteTextView
                android:id="@+id/etSelectState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-- Select State --"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:dropDownHeight="300dp"
                android:inputType="none"/>

            <!-- District Dropdown -->
            <AutoCompleteTextView
                android:id="@+id/etSelectDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-- Select District --"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:dropDownHeight="300dp"
                android:inputType="none"/>

            <!-- Commodity Dropdown -->
            <AutoCompleteTextView
                android:id="@+id/etSelectCommodity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-- Select Commodity --"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:dropDownHeight="300dp"
                android:inputType="none"/>

            <!-- Show Prices Button -->
            <Button
                android:id="@+id/btnShowPrices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Prices"
                android:backgroundTint="#2E7D32"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

