<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- Top Navbar -->
    <include
        android:id="@+id/headerNavbar"
        layout="@layout/header_navbar" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Weather & Recommendations Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:padding="14dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Greater Noida"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvCurrentTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="27Â°C"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCurrentCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foggy"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <HorizontalScrollView
                    android:id="@+id/recommendationScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:id="@+id/recommendationContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rect_rounded_bg"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/light"
                                android:contentDescription="Sunlight" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunlight"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rect_rounded_bg"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/spray"
                                android:contentDescription="Spray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spray"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rect_rounded_bg"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/medicine"
                                android:contentDescription="Medicine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medicine"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rect_rounded_bg"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/grain"
                                android:contentDescription="Grain" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grain"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Banner ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heal Your CropðŸŒ¾"
                android:textSize="19sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <!-- Camera, Diagnose, Medicine Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/box_background"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/icon_camera_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/takepicture"
                            android:contentDescription="Camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open Camera"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon_diagnose_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/seediagnosis"
                            android:contentDescription="Diagnose" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See Diagnose"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon_medicine_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/getmedicine"
                            android:contentDescription="Medicine" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Medicine"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_take_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take a Picture"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Crop Health Sensor Section -->
            <!-- Crop Health Sensor Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Live Farm DiagnosticðŸŒ¿"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(It will not work without the device/hardware, please connect it.)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="10dp" />

                <!-- Crop Health Sensor Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Health Sensor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- First Row: PH, NPK, Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="12dp">

                    <!-- PH Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/phsensor"
                            android:contentDescription="PH Sensor Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PH"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- NPK Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginHorizontal="4dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/npksensor"
                            android:contentDescription="NPK Sensor Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NPK"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Temperature Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginStart="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/temperaturesensor"
                            android:contentDescription="Temperature Sensor Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Second Row: Conductivity & Humidity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Conductivity Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/conductivitysensor"
                            android:contentDescription="Conductivity Sensor Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conductivity"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Humidity Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginStart="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/moisturesensor"
                            android:contentDescription="Humidity Sensor Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- End Crop Health Sensor Section -->
            <!-- Environment Alerts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environment Alerts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <!-- First Row: UV Radiation & Strong Wind/Storm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <!-- UV Radiation Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/uvsensor"
                            android:contentDescription="UV Radiation Alert Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UV Radiation"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Strong Wind/Storm Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginStart="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/windsensor"
                            android:contentDescription="Strong Wind/Storm Alert Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strong Wind/Storm"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Second Row: Animal Grazing Alert & Rain Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Animal Grazing Alert Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/animalsensor"
                            android:contentDescription="Animal Grazing Alert Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animal Grazing"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Rain Info Box -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rounded_box_bg"
                        android:layout_marginStart="8dp"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/rainsensor"
                            android:contentDescription="Rain Info Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rain Info"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device Unavailable"
                            android:textColor="#F44336"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/call_bg"
            android:src="@drawable/ic_call"
            android:tint="@android:color/white"/>

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/share_bg"
            android:src="@drawable/ic_share"
            android:tint="@android:color/white"/>

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/chat_bg"
            android:src="@drawable/ic_chat"
            android:tint="@android:color/white"/>
    </LinearLayout>

</FrameLayout>
