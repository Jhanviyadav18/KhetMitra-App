<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Navbar -->
    <include
        android:id="@+id/headerNavbar"
        layout="@layout/header_navbar" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Page Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ± Crop Details &amp; Cultivation Guide"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Subtitle Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a crop to explore its cultivation requirements, timeline, and best practices ðŸŒ¿"
                android:textSize="16sp"
                android:textColor="#616161"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Dropdown for Crop Selection -->
            <AutoCompleteTextView
                android:id="@+id/etSelectCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-- Select a Crop --"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:dropDownHeight="300dp"
                android:inputType="none"
                android:dropDownVerticalOffset="8dp"
                android:dropDownAnchor="@id/etSelectCrop"
                android:popupBackground="@color/white"/>

            <!-- Crop Data Display Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:elevation="4dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvCropData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a crop to see detailed information hereðŸŒ¾"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"/>
            </LinearLayout>

            <!-- RecyclerView for List of Crops -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCrops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:clipToPadding="false"
                android:background="#FAFAFA"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
